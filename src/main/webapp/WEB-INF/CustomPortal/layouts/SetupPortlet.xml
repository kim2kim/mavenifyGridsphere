<?xml version="1.0" encoding="UTF-8"?>

<!--

    Portlets Setup Layout Descriptor

    This descriptor defines the portlet setup layout

    $Id$
-->

<page label="portletsetup"
      title="GridSphere Portlet Setup Include"
      keywords="gridsphere"
      icon="images/favicon.ico"
      editable="false"
      required-role="setup">

    <!-- Header components -->
    <header>
        <table>
            <row>
                <column width="70%">
                    <content include="jcr://pageheader" border="false"/>
                </column>
            </row>
        </table>
    </header>

    <bar>
        <table>
            <row>
                <column width="70%">
                    <content label="setup" include="/WEB-INF/jsp/setup/portletSetup.jsp"/>
                </column>
                <column width="30%"/>
            </row>
        </table>
    </bar>

    <!-- Footer components (if any) -->
    <footer>
        <table>
            <row>
                <column width="50%">
                    <content include="jcr://pagefooter" border="false"/>
                </column>
            </row>
        </table>
    </footer>

</page>
