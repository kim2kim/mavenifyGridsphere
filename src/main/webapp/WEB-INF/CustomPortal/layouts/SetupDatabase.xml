<page label="setupdb"
      title="GridSphere Portal Setup"
      keywords="gridsphere"
      icon="images/favicon.ico"
      editable="false"
      required-role="setup">

    <!-- Header components -->
    <header>
        <table>
            <row>
                <column width="70%">
                    <content include="jcr://pageheader" border="false"/>
                </column>
            </row>
        </table>
    </header>

    <bar>
        <table>
            <row>
                <column width="70%">
                    <content label="setup" include="/jsp/setup/selectDatabase.jsp"/>
                </column>
                <column width="30%"/>
            </row>
        </table>
    </bar>

    <!-- Footer components (if any) -->
    <footer>
        <table>
            <row>
                <column width="50%">
                    <content include="jcr://pagefooter" border="false"/>
                </column>
            </row>
        </table>
    </footer>

</page>
